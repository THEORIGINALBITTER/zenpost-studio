{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ZenPost Studio",
  "version": "1.0.4",
  "identifier": "com.zenpost.studio",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ZenPost - Studio",
        "width": 1200,
        "height": 800,
        "minWidth": 1200,
        "minHeight": 800,

      "transparent": true,  
      "decorations": true,  

        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
