{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    "dialog:default",
    "dialog:allow-open",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "http:default",
    "http:allow-fetch",
    "opener:default",
    "opener:allow-open-url",
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "https://denisbitter.de"
        },
        {
          "url": "https://theoriginalbitter.github.io/*"
        },
        {
          "url": "https://github.com/THEORIGINALBITTER/*"
        },
        {
          "url": "mailto:saghallo@denisbitter.de"
        },
        {
          "url": "mailto:*"
        },
        {
          "url": "https://*"
        }
      ]
    },
    "shell:default",
    "shell:allow-execute",
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://localhost:11434/*"
        },
        {
          "url": "https://*"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "open",
          "cmd": "open",
          "args": true
        },
        {
          "name": "explorer",
          "cmd": "explorer",
          "args": true
        },
        {
          "name": "xdg-open",
          "cmd": "xdg-open",
          "args": true
        }
      ]
    }
  ]
}
