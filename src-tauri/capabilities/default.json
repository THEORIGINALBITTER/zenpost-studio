{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
   {
  "identifier": "http:default",
  "allow": [
    { "url": "http://127.0.0.1:11434/**" },
    { "url": "http://127.0.0.1:11434/**" },

    { "url": "https://api.openai.com/**" },
    { "url": "https://api.anthropic.com/**" }
  ]

    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DOCUMENTS/**" },
        { "path": "$APPDATA/**" }
      ]
    },
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**",
        "$HOME/Documents/**",
        "$DOCUMENTS/**",
        "$APPDATA/**"
      ]
    },
    "fs:scope-app-recursive",
    "fs:scope-home-recursive",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://127.0.0.1:11434" },
        { "url": "http://127.0.0.1:11434/*" },
        { "url": "http://127.0.0.1:11434" },
        { "url": "http://127.0.0.1:11434/*" },
        { "url": "https://api.openai.com" },
        { "url": "https://api.openai.com/*" },
        { "url": "https://api.anthropic.com" },
        { "url": "https://api.anthropic.com/*" }
      ]
    },
    "opener:default",
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        { "url": "https://*/**" },
        { "url": "http://*/**" },
        { "url": "mailto:*" }
      ]
    },
    "shell:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-open",
      "allow": [
        { "url": "https://*/**" },
        { "url": "http://*/**" },
        { "url": "mailto:*" }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "open",
          "cmd": "open",
          "args": true
        },
        {
          "name": "explorer",
          "cmd": "explorer",
          "args": true
        },
        {
          "name": "xdg-open",
          "cmd": "xdg-open",
          "args": true
        }
      ]
    }
  ]
}
